    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <SelfContained>false</SelfContained>
    <PublishSingleFile>true</PublishSingleFile>
  </PropertyGroup>

  <ItemGroup>
    <!-- Reference to DigitalPersona U.are.U RTE assemblies -->
    <!-- Located in C:\Program Files\DigitalPersona\U.are.U RTE\Windows\Lib\.NET -->
